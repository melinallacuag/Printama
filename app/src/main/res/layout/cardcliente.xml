<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carddetalleventa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5sp"
    android:backgroundTint="#fff"
    android:background="@drawable/input_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:columnCount="6"
            android:elevation="2sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textID"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:textColor="#071C65"
                android:textSize="8sp"
                android:text="123456789"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textRUC"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:textColor="#071C65"
                android:textSize="8sp"
                android:text="123456789147"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textRazoSocial"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:textColor="#071C65"
                android:textSize="8sp"
                android:text="Razon Social del Cliente"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textDireccon"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:textColor="#071C65"
                android:textSize="8sp"
                android:text="direccion del cliente"
                android:textStyle="bold" />
        </LinearLayout>
</androidx.cardview.widget.CardView>