<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardtransaccion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5sp"
    android:backgroundTint="#fff"
    android:background="@drawable/input_border">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:columnCount="6"
                    android:elevation="2sp"
                    android:gravity="center"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/griatextcara"
                            android:layout_width="30sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center"
                            android:textColor="#071C65"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/griatextmanguera"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center"
                            android:textColor="#071C65"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/griatextproducto"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center"
                            android:textColor="#071C65"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/griatextprecio"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center"
                            android:textColor="#071C65"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/griatextgalones"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center"
                            android:textColor="#071C65"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/griatextsoles"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center"
                            android:textColor="#071C65"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txtcaragria2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_black"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#2C291B"
                            android:textSize="20sp"
                            android:text="ddddd"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txtproductogria2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_black"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#2C291B"
                            android:textSize="20sp"
                            android:text="ddddd"
                            android:textStyle="bold" />

                </LinearLayout>
</HorizontalScrollView>
</androidx.cardview.widget.CardView>