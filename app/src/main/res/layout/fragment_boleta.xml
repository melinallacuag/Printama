<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contain"
    tools:context=".BoletaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/cardmodal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_extrabold"
            android:text="BOLETA"
            android:textColor="#071C65"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textnplaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresar N° de Placa"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:endIconMode="clear_text"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputnplaca"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="12sp"
                    android:inputType="textCapCharacters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btntarjeta"
                android:layout_width="200sp"
                android:layout_height="60sp"
                android:layout_marginStart="10sp"
                android:text="buscar"
                android:textSize="10sp"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_weight="1"
                app:cornerRadius="10sp"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textdni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresar DNI"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:endIconMode="clear_text"
                android:layout_weight="1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputdni"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:inputType="number"
                android:maxLength="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnrenic"
                android:layout_width="200sp"
                android:layout_height="60sp"
                android:layout_marginStart="10sp"
                android:text="reniec"
                android:textSize="10sp"
                android:layout_weight="1"
                app:cornerRadius="10sp"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="10sp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar Nombre"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputnombre"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:inputType="textCapCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textdireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar Dirección"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputdireccion"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:inputType="textCapCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textkilometraje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar Kilometraje"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputkilometraje"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:inputType="textCapCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textobservacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar Observación"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputobservacion"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:inputType="textCapCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Forma de Pago:"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="#071C65"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioformapago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Efectivo"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="#123456"
                android:textColorHint="#404143"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Tarjeta"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="#123456"
                android:textColorHint="#404143"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioCredito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Credito"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="#123456"
                android:textColorHint="#404143"
                android:textSize="14sp" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textdropStatus"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/cardlogin"
            android:backgroundTint="#AFB1B1"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/dropStatus"
              android:layout_marginTop="-22sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50sp">
            </Spinner>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/modopagoefectivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/cardlogin"
            android:backgroundTint="#41C9F3"
            android:padding="15sp"
            android:visibility="gone"
            android:fontFamily="@font/nunito_extralight"
            android:text="Se realizara el modo de Pago en Efectivo"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textnrooperacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar Nro.Operacion"
            app:boxBackgroundMode="outline"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputnrooperacion"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textpagoefectivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar Pago Efectivo"
            app:boxBackgroundMode="outline"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputpagoefectivo"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:inputType="number"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btngenerarcliente"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:text="Boleta Simple"
                android:layout_marginEnd="2sp"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_extrabold"
                android:textAllCaps="true"
                android:backgroundTint="#21AFA3"
                android:textColor="#fff"
                android:textSize="10sp"
                app:cornerRadius="10sp"
                android:layout_weight="1"
                android:layout_marginRight="2sp" />
            <Button
                android:id="@+id/btncancelarboleta"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:text="Cancelar"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:backgroundTint="#D51A30"
                android:textColor="#fff"
                android:textSize="10sp"
                app:cornerRadius="10sp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnagregarboleta"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:text="Agregar"
                android:layout_marginStart="2sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="10sp"
                android:fontFamily="@font/nunito_extrabold"
                app:cornerRadius="10sp"
                android:layout_weight="1"
                android:layout_marginLeft="2sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>