<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ClientesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/cardmodal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8sp"
                android:layout_weight="1"
                android:text="CLIENTES"
                android:fontFamily="@font/nunito_black"
                android:textColor="#071C65"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="8sp" />

        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:background="@drawable/input_border" />

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/carddetalleventa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10sp"
            android:backgroundTint="#001E89"
            android:background="@drawable/button">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2sp"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="ID"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:inputType="textCapCharacters"
                        android:layout_marginRight="2sp" />
                    <TextView
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2sp"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="RUC"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:inputType="textCapCharacters"
                        android:layout_marginRight="2sp" />

                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2sp"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="RAZON SOCIAL"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:inputType="textCapCharacters"
                        android:layout_marginRight="2sp" />

                    <TextView
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:text="DIRECCIÓN"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:inputType="textCapCharacters"/>

                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:background="@drawable/input_border"
            android:backgroundTint="#fff"
            android:clickable="true"
            android:columnCount="3"
            android:elevation="5sp"
            android:foreground="@drawable/selectcard"
            android:padding="15sp"
            android:rowCount="1">

            <TextView
                android:layout_width="90sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5sp"
                android:fontFamily="@font/nunito_semibold"

                android:text="7154859623451"
                android:textColor="#071C65"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="5sp" />

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:fontFamily="@font/nunito_semibold"

                android:text="Nombre Razon Social"
                android:textColor="#071C65"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="5sp" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:text="los angeles N°300"
                android:textColor="#071C65"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="5sp" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclercliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btncancelar"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:text="Cancelar"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:backgroundTint="#D51A30"
                android:textColor="#fff"
                android:textSize="10sp"
                app:cornerRadius="10sp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnagregarcliente"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:text="Agregar"
                android:layout_marginStart="2sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="10sp"
                android:fontFamily="@font/nunito_extrabold"
                app:cornerRadius="10sp"
                android:layout_weight="1"
                android:layout_marginLeft="2sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>