<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacturaFragment">


    <LinearLayout
        android:layout_width="380sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:padding="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="FACTURACIÓN"
                android:textColor="#071C65"
                android:textSize="25sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/nunito_black"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textnplaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="N° Placa"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:endIconMode="clear_text"
                android:layout_weight="1"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputnplaca"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="14sp"
                    android:inputType="textCapCharacters"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btntarjeta"
                android:layout_width="180sp"
                android:layout_height="60sp"
                android:layout_marginStart="10sp"
                android:text="buscar"
                android:textSize="10sp"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_weight="1"
                app:cornerRadius="10sp"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="10sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textruc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresar RUC"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:endIconMode="clear_text"
                android:layout_weight="1"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputruc"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:maxLength="11"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnsunat"
                android:layout_width="180sp"
                android:layout_height="60sp"
                android:layout_marginStart="10sp"
                android:text="SUNAT"
                android:textSize="10sp"
                android:layout_weight="1"
                app:cornerRadius="10sp"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="10sp" />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textrazonsocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Razón Social"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputrazonsocial"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="14sp"
                android:inputType="textCapCharacters"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textdireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:endIconMode="clear_text"
            android:layout_weight="1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputdireccion"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="14sp"
                android:inputType="textCapCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btntipopago"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="10sp"
            android:backgroundTint="#0FA10A"
            android:gravity="center"
            android:text="Tipo de pago"
            android:fontFamily="@font/nunito_extrabold"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="12sp"
            app:cornerRadius="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncancelarfacturacion"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:backgroundTint="#D51A30"
                android:text="Cancelar"
                android:fontFamily="@font/nunito_extrabold"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="10sp"
                app:cornerRadius="10sp"
                android:layout_marginRight="20sp" />

            <Button
                android:id="@+id/btnagregarfacturacion"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Agregar"
                android:fontFamily="@font/nunito_extrabold"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="10sp"
                app:cornerRadius="10sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>